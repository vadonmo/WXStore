<!--pages/address/address.wxml-->
<view class="container">
  <radio-group>
    <view class='address-item' wx:for="{{addressList}}" wx:key='item.id'>
      <radio wx:if="{{from != 'person'}}" class='address-cb' value="{{item.id}}" data-index='{{index}}' data-checked='{{item.checked}}' checked="{{item.checked}}" bindtap='addressChecked' />
      <view class='address'>
        <view class='addressInfo'>
          <view class='user-info'>{{item.user.name}}-{{item.user.phone}}</view>
          <view class='user-address'>{{item.user.address.p||""}}{{item.user.address.c||""}}{{item.user.address.r||""}}{{item.user.address.o||""}}</view>
        </view>
        <view class='address-op'>
          <view class='address-edit' data-index='{{index}}' catchtap='editAddress'>修改</view>
          <view class='address-delete' data-index='{{index}}' catchtap='deleteAddress'>删除</view>
        </view>
      </view>
    </view>
  </radio-group>
</view>
/* pages/order/order.wxss */

.address {
  z-index: 9999;
  position: fixed;
  top: 0;
  height: 130rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  background: #fff url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAIAAAAAKBAMAAACOO0tGAAAABGdBTUEAALGPC/xhBQAAAAFzUkdCAK7OHOkAAAAnUExURf///4u16Oxtbezz/J3B7NDh9vSmprjS8vGNjfjDw/vd3f7w8O57e0EOI68AAABSSURBVCjPY2CAAE4l7GACVJ4hUBArEIXJL8KuXw0mz4xdv2ABVJ77EHYDGmAGmGDXLwKT58CuX2cDTIEjdgOcYfJJ2A3Qgsmz4/CBwWgQUiMIAXzCOFELLk/nAAAAAElFTkSuQmCC) -7px bottom repeat-x;
  background-size: 64rpx 5px;
}

.user-info, .user-address {
  padding: 0 20rpx 0 20rpx;
  font-size: 32rpx;
}

.order-info {
  margin-top: 130rpx;
  height: 100%;
  width: 100%;
}

.cart {
  width: 90%;
}

.cart-item {
  width: 100%;
  padding: 15rpx;
}

.cart-img {
  width: 200rpx;
  height: 200rpx;
}

.cart-goods {
  display: flex;
}

.goods {
  width: 100%;
}

.goods-name {
  text-align: left;
}

.goods-line {
  justify-content: space-between;
}

.goods-price {
  float: left;
  color: #e4393c;
}

.goods-btn {
  width: 100rpx;
  height: 60rpx;
  padding: 0;
  line-height: 60rpx;
  font-weight: bold;
  color: #999;
  margin: 0;
}

.goods-num {
  float: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  border: 1px solid #999;
  border-radius: 10rpx;
}

.num {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.num-add, .num-sub {
  width: 45rpx;
}

.order-count {
  width: 98%;
  display: flex;
  flex-direction: column;
}

.order-price {
  float: right;
}

.order-pay {
  text-align: center;
  width: 98%;
  height: 80rpx;
  line-height: 80rpx;
  color: white;
  background: #06ba04;
  margin: 15rpx;
  border-radius: 4rpx;
  border-color: #06ba04;
}

/* pages/goods/goodsInfo.wxss */
.goods-info-fixbar {
  position: fixed;
  bottom: 0;
  background: #fd5452;
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods-info-btns {
  width: 50%;
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.goods-info-cart {
  background: #222;
}

.scroll_box {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  white-space: nowrap;
}

.scroll-view_x {
  width: auto;
  overflow: hidden;
}

.item_list {
  width: 100%;
  height: 250rpx;
  display: inline-block;
}

.item_img {
  width: 100%;
}

.goods-info {
  width: 100%;
  margin-left: 20rpx;
}

.goods-title {
  height: auto;
}

.goods-price {
  color: #ff4a48;
}

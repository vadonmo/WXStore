<!--pages/goods/goodsInfo.wxml-->
<view class="container">
  <view class="scroll_box">
    <scroll-view class="scroll-view_x" scroll-x>
      <view class="item_list" wx:for="{{imgsUrl}}" wx:key="1">
        <image src="{{item}}" class="item_img" mode="aspectFill"></image>
      </view>
    </scroll-view>
  </view>
  <view class='goods-title goods-info'>{{title}}</view>
  <view class='goods-price goods-info'>￥{{price}}</view>
</view>
<view class="goods-info-fixbar">
  <view class="goods-info-btns" bindtap='naviToCart'>购物车</view>
  <view class="goods-info-btns goods-info-cart" data-id='{{id}}' bindtap='addToCart'>加入购物车</view>
  <view class="goods-info-btns" bindtap='imBuy' data-id='{{id}}'>立即购买</view>
</view>